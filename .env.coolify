# ==========================================
# AWID v3.0 - Configuration Coolify
# ==========================================

# Base de données PostgreSQL (format connection string)
DATABASE_URL=postgresql://awid_admin:${POSTGRES_PASSWORD}@postgres:5432/awid_v3

# Redis
REDIS_URL=redis://redis:6379

# JWT Secrets
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API
API_URL=http://localhost:3000
NODE_ENV=production
PORT=3000

# CORS
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Sécurité
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
OTP_VALIDITY_MINUTES=5
BCRYPT_ROUNDS=12

# Fichiers
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Notifications
SMS_SENDER_ID=AWID
